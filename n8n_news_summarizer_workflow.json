{
  "nodes": [
    {
      "parameters": {},
      "name": "Start",
      "type": "n8n-nodes-base.start",
      "typeVersion": 1,
      "position": [
        250,
        300
      ]
    },
    {
      "parameters": {
        "url": "https://rss.nytimes.com/services/xml/rss/nyt/HomePage.xml",
        "options": {}
      },
      "name": "Fetch News RSS Feed",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 3,
      "position": [
        450,
        300
      ]
    },
    {
      "parameters": {
        "field": "items",
        "options": {}
      },
      "name": "Extract News Items",
      "type": "n8n-nodes-base.itemLists",
      "typeVersion": 1,
      "position": [
        650,
        300
      ]
    },
    {
      "parameters": {
        "values": [
          {
            "name": "summary",
            "value": "={{$json.title + '\n' + $json.link + '\n' + $json.contentSnippet.substring(0, 200) + '...'}}"
          }
        ],
        "options": {}
      },
      "name": "Summarize News (Simple)",
      "type": "n8n-nodes-base.set",
      "typeVersion": 1,
      "position": [
        850,
        300
      ]
    },
    {
      "parameters": {
        "fromEmail": "your_email@gmail.com",
        "toEmail": "your_email@gmail.com",
        "subject": "Daily News Summary - {{ new Date().toLocaleDateString() }}",
        "text": "Daily News Summary:\n\n{{$json.summary}}\n\n---\n\nGenerated by n8n",
        "authentication": "oAuth2",
        "oAuth2Credential": "YOUR_GMAIL_CREDENTIAL_NAME"
      },
      "name": "Send Email (Gmail)",
      "type": "n8n-nodes-base.gmail",
      "typeVersion": 1,
      "position": [
        1050,
        300
      ]
    }
  ],
  "connections": {
    "Schedule Trigger": {
      "main": [
        {
          "node": "Fetch News RSS Feed",
          "input": 0
        }
      ]
    },
    "Fetch News RSS Feed": {
      "main": [
        {
          "node": "Extract News Items",
          "input": 0
        }
      ]
    },
    "Extract News Items": {
      "main": [
        {
          "node": "Summarize News (Simple)",
          "input": 0
        }
      ]
    },
    "Summarize News (Simple)": {
      "main": [
        {
          "node": "Send Email (Gmail)",
          "input": 0
        }
      ]
    }
  }
